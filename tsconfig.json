{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "Node"
  },
  "include": ["api/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
